{
  "name": "community-io",
  "version": "0.1.0",
  "description": "The Premier AI Community Platform",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "simple": "ts-node-dev --respawn --transpile-only src/simple-server.ts",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:db": "jest src/tests/database.test.ts",
    "migrate": "node-pg-migrate",
    "migrate:create": "node-pg-migrate create",
    "migrate:up": "node-pg-migrate up",
    "migrate:down": "node-pg-migrate down",
    "migrate:redo": "node-pg-migrate redo",
    "seed": "ts-node scripts/seed.ts",
    "schema:diagram": "node scripts/generate-schema-diagram.js",
    "db:setup": "bash scripts/setup-db.sh",
    "db:reset": "node-pg-migrate down 999999 && node-pg-migrate up && ts-node scripts/seed.ts",
    "deploy": "npm run build && cd frontend && npm run build && netlify deploy --prod --site 3a857d78-1494-4fd2-9ac8-60659033b16f"
  },
  "keywords": [
    "ai",
    "community",
    "platform",
    "knowledge-sharing"
  ],
  "author": "community.io Team",
  "license": "MIT",
  "dependencies": {
    "@simplewebauthn/browser": "^13.1.0",
    "@simplewebauthn/server": "^13.1.1",
    "@supabase/supabase-js": "^2.49.4",
    "@types/multer": "^1.4.12",
    "bcrypt": "^6.0.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cron": "^4.3.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-jwt": "^8.5.1",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.18.1",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.2",
    "node-cron": "^4.0.5",
    "node-pg-migrate": "^6.2.2",
    "nodemailer": "^7.0.3",
    "openai": "^4.98.0",
    "passport": "^0.7.0",
    "passport-auth0": "^1.4.4",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.16.0",
    "slugify": "^1.6.6",
    "socket.io": "^4.8.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-jwt": "^7.4.4",
    "@types/express-session": "^1.18.1",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "@types/nodemailer": "^6.4.17",
    "@types/passport": "^1.0.17",
    "@types/passport-auth0": "^1.0.9",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "directories": {
    "doc": "docs"
  }
}
